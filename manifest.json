{
	"manifest_version": 2,

	"name": "Bookmarks Manager",
	"description": "Manage bookmarks and import from Opera 12",
	"version": "1.0",

	"permissions": [
		"tabs",
		"contextMenus",
		"<all_urls>",
		"unlimitedStorage"
	],

	"icons": {
		"16": "images/icon-16.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},

	"background": {
		"scripts": ["scripts/background.js"]
	},

	"browser_action": {
		"default_icon": {
			"19": "images/add.png",
			"38": "images/add@2x.png"
		},
		"default_title": "Bookmarks Manager",
		"default_popup": "popup.html"
	},

	"options_page": "options.html"
}