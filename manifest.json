{
    "manifest_version": 2,

    "name": "Bookmark Manager",
    "description": "Manage bookmarks and import from Opera 12.",
    "version": "1.0",

    "permissions": [
        "tabs",
        "contextMenus",
        "<all_urls>",
        "unlimitedStorage"
    ],

    "icons": {
        "16": "bookmarked-icon@16.png",
        "48": "bookmarked-icon@48.png",
        "128": "bookmarked-icon@128.png"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": {
            "19": "unbookmarked-icon@19.png"
        },
        "default_title": "Bookmark Manager",
        "default_popup": "popup.html"
    },

    "options_page": "options.html"
}
